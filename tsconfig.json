{
  "compilerOptions": {
    "target": "ES2020",                 
    "module": "ESNext",                    
    "moduleResolution": "Node", 
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",                  
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "server/**/*.ts",                     
    "api/**/*.ts"                     
  ],
  "exclude": [
    "node_modules",
    "client"                         
  ]
}